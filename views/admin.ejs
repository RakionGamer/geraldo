<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Panel Administrativo - Tienda de Ropa</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" 
        integrity="sha512-Fo3rlrZj/k7ujTnH1z2wGcP4sY6H3s6pHgWl1GhI7urxH6E9oY4BZf3nE3oV6o2BQcl8iHFsMY/bUXy0ZHyYPQ==" 
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-100">
  <header class="bg-white shadow">
    <div class="container mx-auto px-4 py-6">
      <h1 class="text-3xl font-bold text-gray-800">
        <i class="fas fa-tools"></i> Panel Administrativo
      </h1>
    </div>
  </header>
  <main class="container mx-auto px-4 py-6">
    <% if (message) { %>
      <div class="mb-4 p-4 bg-green-200 text-green-800 rounded">
        <%= message %>
      </div>
    <% } %>
    <div class="bg-white rounded shadow p-6">
      <h2 class="text-2xl font-semibold mb-4">Agregar Nuevo Producto</h2>
      <form action="/admin/productos" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="codigo">Código:</label>
          <input type="text" name="codigo" id="codigo" class="w-full px-3 py-2 border rounded" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="productos">Nombre del Producto:</label>
          <input type="text" name="productos" id="productos" class="w-full px-3 py-2 border rounded" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="categoria_id">Categoría:</label>
          <select name="categoria_id" id="categoria_id" class="w-full px-3 py-2 border rounded">
            <option value="">Seleccione una categoría</option>
            <% categorias.forEach(function(cat) { %>
              <option value="<%= cat.id %>"><%= cat.categoria %></option>
            <% }); %>
          </select>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="existencia_actual">Existencia Actual:</label>
          <input type="number" name="existencia_actual" id="existencia_actual" class="w-full px-3 py-2 border rounded" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="precio">Precio:</label>
          <input type="number" step="0.01" name="precio" id="precio" class="w-full px-3 py-2 border rounded" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="imagen_url">URL de la Imagen:</label>
          <input type="text" name="imagen_url" id="imagen_url" class="w-full px-3 py-2 border rounded">
        </div>
        <div>
          <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
            <i class="fas fa-save"></i> Guardar Producto
          </button>
        </div>
      </form>
    </div>
  </main>
  <footer class="bg-white shadow mt-6">
    <div class="container mx-auto px-4 py-4 text-center text-gray-600">
      &copy; 2025 Tienda de Ropa. Todos los derechos reservados.
    </div>
  </footer>
</body>
</html>
